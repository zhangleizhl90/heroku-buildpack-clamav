#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "-----> Installing ClamAV"
mkdir -p $BUILD_DIR/.heroku/clamav
curl -L -o clamav.tar.gz https://www.clamav.net/downloads/production/clamav-1.3.1.linux.x86_64.deb
tar -xzf clamav.tar.gz -C $BUILD_DIR/.heroku/clamav

echo "-----> Setting up ClamAV database"
mkdir -p $BUILD_DIR/.heroku/clamavdb
curl -L -o $BUILD_DIR/.heroku/clamavdb/main.cvd http://database.clamav.net/main.cvd
curl -L -o $BUILD_DIR/.heroku/clamavdb/daily.cvd http://database.clamav.net/daily.cvd
